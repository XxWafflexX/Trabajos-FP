        "# Programa para calcular velocidad promedio\n",
        "\n",
        "# Solicitar datos al usuario\n",
        "distancia = float(input(\"Ingresa la distancia recorrida (en metros): \"))\n",
        "tiempo = float(input(\"Ingresa el tiempo (en segundos): \"))\n",
        "\n",
        "# Verificar que el tiempo no sea cero\n",
        "if tiempo <= 0:\n",
        "    print(\"El tiempo debe ser mayor que cero para calcular la velocidad.\")\n",
        "else:\n",
        "    velocidad = distancia / tiempo\n",
        "    print(f\"La velocidad es: {velocidad:.2f} m/s\")\n"
